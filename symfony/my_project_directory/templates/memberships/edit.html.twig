{% extends 'base.html.twig' %}

{% block title %}Edit Membership{% endblock %}

{% block body %}
  <div class="container">
    <h1>Edit Membership</h1>

    <form method="POST">
      <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="{{ membership.name }}" required>
      </div>

      <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="{{ membership.title }}" required>
      </div>

      <div>
        <label for="description">Description</label>
        <textarea id="description" name="description" required>{{ membership.description }}</textarea>
      </div>

      <div>
        <button type="submit">Save Changes</button>
      </div>
    </form>

    <a href="{{ path('memberships_index') }}">Back to Memberships List</a>
  </div>
{% endblock %}

{% block stylesheets %}
  <style>
    .container { width: 80%; margin: 0 auto; padding: 20px; }
    h1 { text-align: center; margin-bottom: 20px; }
    form { width: 100%; max-width: 600px; margin: 0 auto; }
    form div { margin-bottom: 15px; }
    label { display: block; font-weight: bold; }
    input, textarea { width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ddd; }
    button { padding: 10px 20px; background: #4CAF50; color: #fff; border-radius: 5px; border: none; cursor: pointer; }
    button:hover { background: #45a049; }
    a { display: inline-block; margin-top: 20px; color: #4CAF50; text-decoration: none; }
    a:hover { text-decoration: underline; }
  </style>
{% endblock %}
