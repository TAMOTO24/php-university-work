{% extends 'base.html.twig' %}

{% block title %}View Session{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="page-title">Session Details</h1>

    <div class="session-details">
      <p><strong>Name:</strong> {{ session.name }}</p>
      <p><strong>Date & Time:</strong> {{ session.dateTime|date('Y-m-d H:i') }}</p>
      <p><strong>Location:</strong> {{ session.location }}</p>
    </div>

    <div class="action-buttons">
      <a href="{{ path('sessions_edit', {'id': session.id}) }}" class="btn btn-warning">Edit</a>
      <form action="{{ path('sessions_delete', {'id': session.id}) }}" method="post" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ session.id) }}">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this session?')">Delete</button>
      </form>
      <a href="{{ path('sessions_index') }}" class="btn btn-secondary">Back to List</a>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}
  <style>
    .container { width: 50%; margin: 0 auto; padding: 40px; }
    .page-title { text-align: center; margin-bottom: 20px; }
    .session-details { margin-bottom: 20px; }
    .session-details p { font-size: 18px; }
    .action-buttons { text-align: center; margin-top: 20px; }
    .btn { margin: 5px; padding: 12px 20px; }
    .btn-danger { background: #dc3545; color: white; }
    .btn-warning { background: #ffc107; color: black; }
    .btn-secondary { background: #6c757d; color: white; }
  </style>
{% endblock %}
