{% extends 'base.html.twig' %}

{% block title %}Редагувати вправу{% endblock %}

{% block body %}
    <h1 class="text-center mt-4">Редагувати вправу</h1>

    <form method="post" action="{{ path('exercises_edit', {'id': exercise.id}) }}" class="form-group">
        <input type="hidden" name="_token" value="{{ csrf_token('edit_exercise' ~ exercise.id) }}">

        <div class="form-group">
            <label for="exercise">Назва вправи</label>
            <input type="text" id="exercise" name="exercise" class="form-control" value="{{ exercise.exercise }}" required>
        </div>

        <div class="form-group">
            <label for="time">Час (в секундах)</label>
            <input type="number" id="time" name="time" class="form-control" value="{{ exercise.time }}" required>
        </div>

        <div class="form-group">
            <label for="title">Назва тренування</label>
            <input type="text" id="title" name="title" class="form-control" value="{{ exercise.title }}" required>
        </div>

        <div class="form-group">
            <label for="trainer_id">Тренер</label>
            <select id="trainer_id" name="trainer_id" class="form-control" required>
                {% for trainer in trainers %}
                    <option value="{{ trainer.id }}" {% if trainer.id == exercise.trainer.id %}selected{% endif %}>{{ trainer.fullName }}</option>
                {% endfor %}
            </select>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Зберегти зміни</button>
    </form>
{% endblock %}
